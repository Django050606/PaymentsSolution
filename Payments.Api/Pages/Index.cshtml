@page
@model IndexModel
@{
    ViewData["Title"] = "Create Payment";
}

<h2>Create New Payment</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">@Model.Message</div>
}

<form method="post" class="shadow p-4 bg-light rounded">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label>Wallet Number</label>
            <input asp-for="Payment.WalletNumber" class="form-control" placeholder="1234567890" />
            <span asp-validation-for="Payment.WalletNumber" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label>Account / User ID</label>
            <input asp-for="Payment.Account" class="form-control" />
            <span asp-validation-for="Payment.Account" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label>Email</label>
            <input asp-for="Payment.Email" type="email" class="form-control" />
            <span asp-validation-for="Payment.Email" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label>Amount</label>
            <input asp-for="Payment.Amount" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Payment.Amount" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label>Currency</label>
        <select asp-for="Payment.Currency" class="form-select">
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="RUB">RUB</option>
        </select>
    </div>

    <div class="mb-3">
        <label>Comment</label>
        <textarea asp-for="Payment.Comment" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success w-100">Submit Payment</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}